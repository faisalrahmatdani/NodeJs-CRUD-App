<div class="container">
  <div class="row mt-5">
    <div class="col-md-8">
      <h2>Daftar Contact</h2>
      <a href="/contact/add" class="btn btn-success my-2"> <i class="bi bi-plus-circle me-1"></i> New Data</a>
      <% if (msg.length !== 0) { %>
      <div class="alert alert-success" role="alert"><%= msg %></div>
      <% } %>
      <table class="table table-dark table-striped">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Nama</th>
            <th scope="col">Nomor Handphone</th>
            <th scope="col">Handle</th>
          </tr>
        </thead>
        <tbody>
          <% if (contacts.length === 0) { %>
          <div class="alert alert-danger" role="alert">Data contact masih kosong</div>
          <% } else { %> <% contacts.forEach((contact, i) => { %>
          <tr>
            <th scope="row"><%= i + 1 %></th>
            <td><%= contact.nama %></td>
            <td><%= contact.ponsel %></td>
            <td>
              <a href="/contact/<%=contact.nama%>" class="btn btn-success badges rounded-pill"> <i class="bi bi-info-circle me-1"></i> Detail</a>
            </td>
          </tr>
          <% }) %> <% } %>
        </tbody>
      </table>
    </div>
  </div>
</div>
